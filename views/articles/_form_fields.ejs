<div class="form-group mb-3">
    <label for="title" class="form-label">Title</label>
    <input  value="<%= article.title %> " oninvalid="this.setCustomValidity('Enter Blog Title')" oninput="this.setCustomValidity('')" type="text"
        name="title" id="title" class="form-control" required>
</div>
<div class="form-group mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea oninvalid="this.setCustomValidity('Enter Blog Description')"
    oninput="this.setCustomValidity('')" name="description" id="description" class="form-control"><%=article.description %> </textarea>
</div>
<div class="form-group mb-3">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea oninvalid="this.setCustomValidity('Enter Blog Markdown')"
    oninput="this.setCustomValidity('')" name="markdown" id="markdown" class="form-control" required><%=article.markdown %></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary" type="submit">Save</button>